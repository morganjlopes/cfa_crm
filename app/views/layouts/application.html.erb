<!DOCTYPE html>
<html>
<head>
  <%= render "layouts/head" %>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><%= image_tag "cfa-logo.png" %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_user and @community and @community.id %>
        <ul class="nav navbar-nav">
          <li class="<%= "active" if @tab_name == "community_home" %>">
            <%= link_to "Home", community_home_path %>
          </li>
          <li class="<%= "active" if @tab_name == "people" %>">
          	<%= link_to "People", people_path %>
          </li>
          <li class="<%= "active" if @tab_name == "companies" %>">
            <%= link_to "Companies", companies_path %>
          </li>
          <li class="<%= "active" if @tab_name == "messages" %>">
            <%= link_to "Messages", messages_path %>
          </li>
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to communities_url(:subdomain => false) do %>
                  <div class="icon-store"></div> Your Communities
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_url(:subdomain => false) do %>
                  <div class="icon-cog"></div> Account Settings
                <% end %>
              </li>
              <li>
                <%= link_to new_user_invitation_path do %>
                  <div class="icon-addfriend"></div> Invite Coworker
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_url(:subdomain => false), method: :delete do %>
                  <div class="icon-exit"></div> Logout
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="heading">
	<div class="container">
		<%= yield(:heading) %>
	</div>
</div>

<div class="container main_container">
	<% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
	<% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
	<%= yield %>
</div>

<footer class="footer">
</footer>

</body>
</html>
