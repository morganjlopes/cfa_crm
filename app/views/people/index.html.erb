<div class="row">
  <div class="col-sm-4">
    <%= render "shared/search" %>
  </div>
  <div class="col-sm-8">
    <div class="btn-group pull-right">
      <%= link_to new_person_path, :class => "btn btn-primary" do %>
        <div class="icon-plus"></div> New Person
      <% end %>
      <%= link_to "", :class => "btn btn-primary" do %>
        <div class="icon-export"></div> Export
      <% end %>
      <%= link_to "", :class => "btn btn-primary" do %>
        <div class="icon-import"></div> Import
      <% end %>
    </div>
  </div>
</div>

<hr>

<%= render "people/index_nav" %>

<div class="row">
  <% if @people.count > 0 %>
    <%= render @people.order("name asc") %>
  <% else %>
    <div class="text-center">
      <p>There are currently no people in the <%= @community.name %> Community.</p>
      <p><%= link_to "Add a Person", new_person_path %></p>
    </div>
  <% end %>
</div>
